        <!-- create table Products -->
        <createTable tableName="products">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="productName" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- create table Prices-->
        <createTable tableName="prices">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="decimal(20,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="varchar(3)">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="bigint">
                <constraints foreignKeyName="fk_product_id" unique="true" references="products(id)" nullable="true"/>
            </column>
        </createTable>

        <!-- create table PriceCategories -->
        <createTable tableName="priceCategories">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="price_id" type="bigint">
                <constraints foreignKeyName="fk_price_id" references="prices(id)" nullable="true"/>
            </column>
        </createTable>

